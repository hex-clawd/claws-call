# Telegram Userbot
API_ID=12345678
API_HASH=abcdef1234567890abcdef1234567890
PHONE_NUMBER=+1234567890

# Security: Only this Telegram user ID can interact with the bot
AUTHORIZED_USER_ID=123456789

# Voice Chat Group
# Create a private group, start a voice chat, and get the chat ID (negative number)
VOICE_CHAT_GROUP_ID=-1001234567890

# Whisper STT (local transcription)
WHISPER_MODEL=small.en

# VAD (Voice Activity Detection) Settings
VAD_SILENCE_THRESHOLD_MS=700  # Silence duration to detect end of turn
VAD_SPEECH_THRESHOLD=0.5      # Silero VAD probability threshold
VAD_MIN_SPEECH_DURATION_MS=300  # Minimum speech duration to be valid

# Auto-rejoin Settings (on disconnect)
AUTO_REJOIN_BACKOFF_BASE=2.0  # Exponential backoff base
AUTO_REJOIN_MAX_DELAY=60      # Max delay between rejoin attempts (seconds)

# Edge TTS Settings
EDGE_TTS_VOICE=en-GB-RyanNeural
EDGE_TTS_LANGUAGE=en-GB

# Clawdbot Gateway (required - routes voice chat through your Clawdbot agent)
OPENCLAW_GATEWAY_URL=ws://127.0.0.1:18789
OPENCLAW_GATEWAY_TOKEN=your_gateway_token_here

# Logging
LOG_LEVEL=INFO
